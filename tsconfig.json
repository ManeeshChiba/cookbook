{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["es2019", "dom", "dom.iterable"],
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "target": "esnext",
    "module": "esnext",
    "isolatedModules": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "exclude": ["node_modules/**/*"]
}
